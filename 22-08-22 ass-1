#include <stdio.h>
void main()
{
    int a[100][100];
    int i,j,r,c;
    printf("Enter row size \n");
    scanf("%d",&r);
    printf("Enter column size \n");
    scanf("%d",&c);
    printf("Enter elements into array\n");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    int x,sum=0;
    printf("Enter the row to caluclate the sum \n");
    scanf("%d",&x);
    for(i=0;i<c;i++)
    {
    sum=sum+a[x][j];
    }
        printf("%d row sum = %d",x+1,sum);
}
